package com.biz.var;

public class Variable06 {

	public static void main(String[] args) {

		int intNum1 = 0;
		int intSum = 0;
		
		intNum1 = intNum1 + 1;
		intNum1 += 1; // Num1의 값이 2가 됌.
		intSum += intNum1; // intSum = intSum + intNum1과 같다
		System.out.println(intSum);
		intNum1 += 1;
		intSum += intNum1;
		System.out.println(intSum);
		// 특별히 += 1 일때는 
		intNum1 ++;
		intSum += intNum1;
		System.out.println(intSum);
		intNum1 ++;
		intSum += intNum1;
		System.out.println(intSum);
		// 변수 앞에 ++가 앞에 오는경우 ++를 가장 먼저 실행함.
		++intNum1;
		intSum += intNum1;
		System.out.println(intSum);
		intSum += ++intNum1; // intSum + (intNum1+1); 와 같음
		System.out.println(intSum);
		intSum += ++intNum1;
		System.out.println(intSum);
	}

}
